<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#d9d7d7" android:orientation="vertical" android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView android:id="@+id/item_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Alumininum" android:textColor="#000000"
        android:textSize="15dp" />
    <TextView android:id="@+id/item_molmass" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="26.98 g" android:textColor="#000000"
        android:textSize="15dp" />
    <TextView android:id="@+id/item_formula" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Al" android:textColor="#000000"
        android:textSize="15dp" />
</LinearLayout>